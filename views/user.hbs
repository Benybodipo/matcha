<div id="info" class="clearfix">
	<div id="profile-img">
		{{#unless user.images.length}}
			{{#if gender}}
				<img src="/img/male.png" alt=""><br>
			{{else}}
				<img src="/img/female.jpeg" alt=""><br>
			{{/if}}
		{{else}}
			<img src="{{user.images}}" alt=""><br>
		{{/unless}}
		<div class="star"><i class="{{like}}"></i></div><br>
	</div>
	<div id="about">
		<h2>{{user.username}}</h2>
		<strong>3km away</strong><br>
		<strong>Cape Town, South Africa</strong>

		<h2>Biography</h2>
		<p>{{user.bio}}</p>

		<h2>Info: </h2>
		<table>
			<tr>
				<td>Name:</td>
				<td>{{user.firstname}}</td>
			</tr>
			<tr>
				<td>Surname:</td>
				<td>{{user.lastname}}</td>
			</tr>
			<tr>
				<td>Age:</td>
				<td>{{user.age}} years old</td>
			</tr>
			<tr>
				<td>I am looking for:</td>
				<td>Women</td>
			</tr>
		</table>
	</div>
</div>
<div id="interests" class="clearfix">
	<h2>Interests</h2>
	<div class="box">
		<table>
			<tr>
				<td><label for=""><i class="fas fa-film"></i> Movies</label></td>
				<td><label for=""><i class="fas fa-palette"></i> Art</label></td>
			</tr>
			<tr>
				<td><label for=""><i class="fas fa-utensils"></i> Food</label></td>
				<td><label for=""><i class="fas fa-plane-departure"></i> Travel</label></td>
			</tr>
		</table>
	</div>
</div>
